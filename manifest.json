{
  "manifest_version": 3,
  "name": "FontDetector",
  "version": "1.0",
  "description": "Display font information on hover over text elements.",
  "permissions": [
    "activeTab"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
