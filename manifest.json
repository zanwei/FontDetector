{
  "manifest_version": 3,
  "name": "FontDetector",
  "version": "1.1.7",
  "description": "Display font information on hover over text elements.",
  "permissions": [
    "activeTab"
  ], 

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "commands": {
    "toggle_font_detector": {
      "suggested_key": {
        "default": "Shift+Ctrl+Z",
        "mac": "Shift+Command+Z"
      },
      "description": "Toggle font detector"
    }
  }
}
